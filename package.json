{
  "name": "enmeti",
  "displayName": "Enmeti (MD Link Inserter)",
  "description": "Helps to insert links in Markdown files.",
  "version": "1.0.1",
  "publisher": "hf-solutions-llc",
  "license": "MIT",
  "author": {
    "email": "alcha@hasslefree.solutions",
    "name": "Devin W. Leaman (Alcha)",
    "url": "https://hasslefree.solutions"
  },
  "homepage": "https://github.com/HF-Solutions/Enmeti",
  "bugs": {
    "email": "bugs@hasslefree.solutions",
    "url": "https://github.com/HF-Solutions/Enmeti/issues"
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/HF-Solutions/Enmeti.git"
  },
  "activationEvents": [
    "onLanguage:markdown",
    "onCommand:enmeti.insertLink"
  ],
  "contributes": {
    "configuration":[
      {
        "title": "Insertion Settings",
        "type": "object",
        "properties": {
          "enmeti.insertOnEmptySelection": {
            "type": "boolean",
            "default": true,
            "description": "Insert links/images when no text is selected."
          }
        }
      }
    ],
    "commands": [
      {
        "command": "enmeti.insertLink",
        "title": "Insert Link",
        "category": "Insertions"
      },
      {
        "command": "enmeti.insertImage",
        "title": "Insert Image",
        "category": "Insertions"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == markdown",
          "command": "enmeti.insertLink",
          "group": "Insertions"
        },
        {
          "when": "resourceLangId == markdown",
          "command": "enmeti.insertImage",
          "group": "Insertions"
        }
      ]
    },
    "keybindings": [
      {
        "command": "enmeti.insertLink",
        "key": "ctrl+shift+i",
        "when": "editorTextFocus"
      },
      {
        "command": "enmeti.insertImage",
        "key": "ctrl+alt+i",
        "when": "editorTextFocus"
      }
    ]
  },
  "readme": "README.md",
  "main": "./extension",
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "publish": "vsce publish && vsce package && mv enmeti*.vsix build/"
  },
  "devDependencies": {
    "typescript": "^3.0.1",
    "vscode": "^1.1.21",
    "standard": "11.0.1",
    "@types/node": "^10.7.1",
    "@types/mocha": "^5.2.5"
  },
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Markdown",
    "Links",
    "Link Management"
  ],
  "markdown": "github"
}
